<%= form_for @user, :html => { :class => "form-horizontal user" } do |f| %>

  <% if @user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= label_tag :password, 'New Password', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= password_field_tag :password, '', :class => 'form-control' %>
    </div>
    <%=f.error_span(:password) %>
  </div>
  <div class="form-group">
    <%= f.label :role, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= select_tag :role, options_from_collection_for_select(Role.all, 'id', 'name'), :class => 'form-control' %>
    </div>
    <%=f.error_span(:role) %>
  </div>
  <div class="form-group">
    <%= f.label :group, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= select_tag :group, options_from_collection_for_select(Group.all, 'id', 'name'), :class => 'form-control' %>
    </div>
    <%=f.error_span(:group) %>
  </div>
  <div class="form-group">
    <%= f.label :info, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :info, :class => 'form-control', :rows => '5' %>
    </div>
    <%=f.error_span(:info) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
