<%- model_class = Role -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @role.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mask) %>:</strong></dt>
  <dd><%= @role.mask %></dd>
  <dt><strong><%= model_class.human_attribute_name(:privileges) %>:</strong></dt>
  <dd><%= @role.privileges %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              roles_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_role_path(@role), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              role_path(@role),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
